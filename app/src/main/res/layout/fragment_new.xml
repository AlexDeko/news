<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.news.NewsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerListPosts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/colorNull"
        android:dividerHeight="12dp"
        android:nestedScrollingEnabled="true"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:listitem="@layout/image_item_list" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/indeterminateBar"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerListPosts"
        app:layout_constraintEnd_toEndOf="@+id/recyclerListPosts"
        app:layout_constraintStart_toStartOf="@+id/recyclerListPosts"
        app:layout_constraintTop_toTopOf="@+id/recyclerListPosts" />
</androidx.constraintlayout.widget.ConstraintLayout>